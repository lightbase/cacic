<form id={{ 'formEtiqueta2'|trans }} class="form-horizontal" action="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}" method="post" {{ form_enctype(form) }}>
    <input name="{{'form.idEtiqueta' }}" type="hidden" value="etiqueta2">
        <table class="table table-striped table-bordered">
            <tr>
                <td style="text-align: center"><h4>{{ ' Texto da "Etiqueta 2": '|trans }}</h4></td>
                <td style="vertical-align: top">{{ form_widget(form.teEtiqueta)}}</td>
                <td style="text-align: left"><h6>{{ ' Exemplo "Divisão" '|trans }}</h6></td>
            </tr>
            <tr>
                <td style="text-align: center"><h5>{{ ' Plural de texto da "Etiqueta 2":'|trans }}</h5></td>
                <td style="vertical-align: top">{{ form_widget(form.tePluralEtiqueta) }}</td>
                <td style="text-align: left"><h6>{{ ' Exemplo "Divisões" '|trans }}</h6></td>
            </tr>
            <tr>
                <td style="text-align: center"><h5>{{ 'Texto de ajuda da "Etiqueta 2":'|trans }}</h5></td>
                <td style="vertical-align: top">{{ form_widget(form.teHelpEtiqueta) }}</td>
                <td style="text-align: left"><h6>{{ ' Exemplo "Selecione a divisão onde encontra-se este equipamento"  '|trans }}</h6></td>
            </tr>
            <tr>
                <td style="text-align: center"><h5>{{ 'Elemento origatório?'|trans }}</h5></td>
                <td style="vertical-align: top">{{ form_widget(form.inObrigatorio) }}</td>
                <td style="text-align: left"><h6>{{ ' O preenchimento do campo é obrigatório? '|trans }}</h6></td>
            </tr>
        </table>

    <br />
    <div class="control-group">
        <div class="controls">
            <button type="reset" class="btn">
                <i class="icon-refresh"></i>
                {{ "Resetar Alterações"|trans }}
            </button>
            <button type="submit" class="btn btn-primary">
                <i class="icon-search"></i>
                {{ 'Salvar Alterações'|trans }}
            </button>
        </div>
    </div>
</form>