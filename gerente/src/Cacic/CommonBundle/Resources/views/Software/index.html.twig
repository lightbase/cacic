{% extends '::base.html.twig' %}

{% block body %}

<div class="span12">

    <div class="widget">

        <div class="widget-header">
            <i class="icon-desktop"></i>
            <h3>Software</h3>
        </div> <!-- /widget-header -->

        <div class="widget-content">

            <h3>Lista de Software cadastrados</h3>
            <br />

            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th width="90%"style="text-align: center">Nome do Software</th>
                    <th style="text-align: center">Ações</th>
                </tr>
                </thead>

                <tbody>

                {% for software in Software %}
                    <tr id="item_{{ software['idSoftware'] }}">
                        <td style="text-align: center" id="item_desc_{{ software['idSoftware'] }}">{{ software['nmSoftware'] }}</td>
                        <td class="td-actions">
                            <a href="{{ path('cacic_software_editar', {'idSoftware': software['idSoftware']}) }}" class="btn btn-small" title="Editar Item">
                                <i class="btn-icon-only icon-edit"></i>
                            </a>

                            <a href="{{ path('cacic_software_excluir') }}" class="btn btn-small btn-danger bt-excluir" title="Excluir Item">
                                <i class="btn-icon-only icon-remove"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td align="center" colspan="6"><b>NENHUM REGISTRO ENCONTRADO!</b></td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
            <div align="right">
                <a class="btn btn-primary bt-adicionar" href="{{ path('cacic_software_cadastrar') }}">
                    <i class="icon-plus-sign"></i>
                    Adicionar Softwares
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}