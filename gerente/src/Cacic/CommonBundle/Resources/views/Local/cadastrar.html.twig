{% extends '::base.html.twig' %}

{% block body %}
<div class="page-header">
    <h1>Locais<small>Cadastro de novo local</small></h1>
</div>

<div class="well">
	
	<form action="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}" method="post" {{ form_enctype(form) }}>
	
	{{ form_widget(form) }}
	
	{% block redesAssociadas %}{% endblock %}
	{% block usuariosAssociados %}{% endblock %}
	
	{{ form_rest(form) }}
	
	<div class="form-opcoes">
		<input type="reset" value="Limpar Valores" class="btn btn-small" />
		<input type="submit" value="Salvar Dados" class="btn btn-primary btn-small" />
	</div>
	
	</form>
	
</div>

<div align="left">
	<a class="btn btn-danger btn-small" href="{{ path('cacic_local_index') }}"> Cancelar </a>
</div>
	
{% endblock %}