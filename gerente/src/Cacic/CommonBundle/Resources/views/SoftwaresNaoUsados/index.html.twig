{% extends '::base.html.twig' %}

{% block breadcrumb %}
    <li class="active">{{ 'Softwares Não Usados'|trans }}</li>
{% endblock %}

{% block body %}

<div class="row-fluid">
   <div class="span12">

     <div class="box grad_colour_black">

        <h2 class="box_head round_top"><i class="icon-hdd"></i> {{ 'Softwares Não Usados'|trans }}</h2>

        <div class="block box_content round_bottom padding_10">

            <h3>{{ 'Lista de Software não usados'|trans }}</h3>
            <p>{{ 'Neste módulo deverão ser Removidos do Sistema os Softwares não usados'|trans }}</p>
            <br />

          <table class="table table-striped table-bordered">
             <thead>
                <tr>
                    <th width="90%"style="text-align: center">{{ 'Nome do Software'|trans }}</th>
                    <th style="text-align: center">
                      <label style="margin: auto; width:12px; height:10px;">
                        <input id="checkAll" type="checkbox">
                      </label>
                        
                    </th>
                </tr>
             </thead>

             <tbody>
                {% for software in TodosSoftwares %}
                    <tr id="item_{{ software['idSoftware'] }}">
                        <td style="text-align: center" id="item_desc_{{ software['idSoftware'] }}">{{ software['nmSoftware'] }}</td>
                        <td >
                            <label style="margin: auto; width:12px; height:10px;">
                                <input type="checkbox" id="item_id_{{ software['idSoftware'] }}" class="tipo-check" name="{{'software'}}[]" value="{{  software['idSoftware'] }}">
                            </label>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td align="center" colspan="2"><b>{{ 'NENHUM REGISTRO ENCONTRADO!'|trans }}</b></td>
                    </tr>
                {% endfor %}

             </tbody>
          </table>
          <div align="right">
                <a class="btn btn-danger bt-excluir-check" href="{{ path('cacic_softwares_nao_usados_excluir') }}">
                    <i class="btn-icon-only icon-remove"></i>
                    {{ 'Excluir Selecionados'|trans }}
                </a>
          </div>
        </div> <!-- /block -->
     </div><!-- /box -->

   </div><!-- /span -->
</div><!-- /row -->
{% endblock %}