
<h5>{{ "Resultado da pesquisa"|trans }}</h5>

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th width="5%" style="text-align: center"></th>
        <th width="20%">{{ "Data"|trans }}</th>
        <th width="10%">{{ "Local/Rede"|trans }}</th>
        <th width="10%">{{ "Estacao"|trans }}</th>
        <th width="20%">{{ "Sistema Operacional"|trans }}</th>
        <th width="10%">{{ "Usu√°rio"|trans }}</th>
        <th width="10%">{{ "Motivo"|trans }}</th>
    </tr>
    </thead>

    <tbody>

    {% for insucesso in insucessos %}

        <tr id="item_{{ insucesso[0]['idLog'] }}">
            <td style="text-align: center">{{ loop.index }}</td>
            <td id="item_desc_{{ insucesso[0]['idLog'] }}">{{ insucesso[0].dtDatahora|date('d/m/Y H:i:s') }}</td>
            <td>{{ insucesso[0][''] }}</td>
            <td>{{ insucesso[0]['teIpComputador'] }}</td>
            <td>{{ insucesso[0]['teSo'] }}</td>
            <td>{{ insucesso['nmUsuarioCompleto'] }}</td>
            <td>{{ insucesso[0]['csIndicador'] }}</td>
        </tr>

    {% else %}
        <tr>
            <td style="text-align: center;" colspan="7"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
        </tr>
    {% endfor %}

    </tbody>
</table>