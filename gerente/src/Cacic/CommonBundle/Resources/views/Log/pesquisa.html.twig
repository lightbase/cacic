
<h5>{{ "Resultado do filtro"|trans }}</h5>

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th width="5%" style="text-align: center"></th>
        <th width="20%">{{ "Data"|trans }}</th>
        <th width="20%">{{ "Usuário"|trans }}</th>
        <th width="20%">{{ "Endereço IP"|trans }}</th>
    </tr>
    </thead>

    <tbody>

    {% for log in logs %}

        <tr id="item_{{ log[0]['idLog'] }}">
            <td style="text-align: center">{{ loop.index }}</td>
            <td id="item_desc_{{ log[0]['idLog'] }}"></td>
            <td>{{ log[0]['csAcao'] }}</td>
            <td>{{ log['nmLocal'] }}</td>
        </tr>

    {% else %}
        <tr>
            <td style="text-align: center;" colspan="2"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
        </tr>
    {% endfor %}

    </tbody>
</table>