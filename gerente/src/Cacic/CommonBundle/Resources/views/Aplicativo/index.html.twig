{% extends '::base.html.twig' %}

{% block breadcrumb %}

   <li class="active">{{ "Aplicativos"|trans }}</li>
{% endblock %}

{% block body %}

<div class="row-fluid">
  <div class="span12">
    <div class="box grad_colour_black">

      <h2 class="box_head round_top"><i class="icon-globe"></i> {{ "Aplicativos"|trans }}</h2>

      <div class="block box_content round_bottom padding_10">

            <h3>{{ "Lista de Aplicativos Monitorados cadastrados"|trans }}</h3>
            <p>{{ "Neste módulo deverão ser cadastrados os Aplicativos Monitorados"|trans }}</p>
            <br />
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th width="40%">{{ "Sistema Monitorado"|trans }}</th>
                    <th width="30%">{{ "Totais de Redes Alvo"|trans }}</th>
                    <th style="text-align: center">{{ "Ações"|trans }}</th>
                </tr>
            </thead>


            <tbody>

                {% for aplicativo in aplicativo %}

                    <tr id="item_{{ aplicativo.idAplicativo }}" class="{{ cycle(['row0', 'row1'], loop.index) }}">
                        <td id="item_desc_{{ aplicativo.idAplicativo }}">{{ aplicativo.nmAplicativo }}</td>
                        <td style="text-align: center"></td>
                        <td style="text-align: center" class="td-actions">
                            <a href="{{ path('cacic_aplicativo_editar', {'idAplicativo': aplicativo.idAplicativo }) }}" class="btn btn-small" title="{{ "Editar Item"|trans }}">
                                <i class="btn-icon-only icon-edit icon-large"></i>
                            </a>

                            <a href="{{ path('cacic_aplicativo_excluir') }}" class="btn btn-small btn-danger bt-excluir" title="{{ "Excluir Item"|trans }}">
                                <i class="btn-icon-only icon-trash icon-large"></i>
                            </a>
                        </td>
                    </tr>

                {% else %}
                    <tr>
                        <td style="text-align: center;" colspan="3"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>


          {# display navigation #}
          <div class="navigation">
              {{ knp_pagination_render(aplicativo) }}
          </div>


        <div align="right">
            <a class="btn btn-primary bt-adicionar" href="{{ path('cacic_aplicativo_cadastrar') }}">
                <i class="icon-plus-sign"></i>
                {{ "Adicionar Aplicativo"|trans }}
            </a>
        </div>
      </div> <!-- /block -->
    </div><!-- /box -->

  </div><!-- /span -->
</div><!-- /row -->
{% endblock %}