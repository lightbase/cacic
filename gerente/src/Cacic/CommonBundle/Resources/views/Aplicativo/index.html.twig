{% extends '::base.html.twig' %}

{% block body %}

<div class="span12">
    <div class="widget">
        <div class="widget-header">
            <i class="icon-globe"></i>
            <h3>Aplicativos Monitorados</h3>
        </div> <!-- /widget-header -->

        <div class="widget-content">

            <h3>Aplicativos</h3>
            <p>Lista de Aplicativos Monitorados cadastrados</p>
            <br />

            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th width="40%">Sistema Monitorado</th>
                    <th width="30%">Totais de Redes Alvo</th>
                    <th style="text-align: center">Ações</th>
                </tr>
                </thead>

                <tbody>

                {% for perfil in aplicativo %}

                    <tr id="item_{{ perfil['idAplicativo'] }}" class="{{ cycle(['row0', 'row1'], loop.index) }}">
                        <td id="item_desc_{{ perfil['idAplicativo'] }}">{{ perfil['nmAplicativo'] }}</td>
                        <td style="text-align: center"></td>
                        <td style="text-align: center" class="td-actions">
                            <a href="{{ path('cacic_aplicativo_editar', {'idAplicativo': perfil['idAplicativo']}) }}" class="btn btn-small" title="Editar Item">
                                <i class="btn-icon-only icon-edit"></i>
                            </a>

                            <a href="{{ path('cacic_aplicativo_excluir') }}" class="btn btn-small btn-danger bt-excluir" title="Excluir Item">
                                <i class="btn-icon-only icon-remove"></i>
                            </a>
                        </td>
                    </tr>

                {% else %}
                    <tr>
                        <td style="text-align: center;" colspan="6"><b>NENHUM REGISTRO ENCONTRADO!</b></td>
                    </tr>
                {% endfor %}

                </tbody>
             </table>
            <div align="right">
                <a class="btn btn-primary bt-adicionar" href="{{ path('cacic_aplicativo_cadastrar') }}">
                    <i class="icon-plus-sign"></i>
                    Adicionar Aplicativo
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}