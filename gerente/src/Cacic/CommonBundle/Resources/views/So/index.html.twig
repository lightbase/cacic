{% extends '::base.html.twig' %}

{% block breadcrumb %}
    <li class="active">{{ "Sistemas Operacionais"|trans }}</li>
{% endblock %}

{% block body %}

<div class="row-fluid">
   <div class="span12">
      <div class="box grad_colour_black">

         <h2 class="box_head round_top"><i class="icon-cog"></i> {{ "Sistemas Operacionais"|trans }}</h2>

         <div class="block box_content round_bottom padding_10">

            <h3>{{ "Lista de Sistemas Operacionais cadastrados"|trans }}</h3>
            <p>{{ "Neste módulo deverão ser cadastrados os Sistemas Operacionais"|trans }}</p>
            <br />

           <table class="table table-striped table-bordered">
              <thead>
                <tr>
                    <th width="15%">{{ "Descrição"|trans }}</th>
                    <th width="15%" style="text-align: center" >MS-Windows?</th>
                    <th width="15%" style="text-align: center" >{{ "ID Interna"|trans }}</th>
                    <th width="15%" style="text-align: center">{{ "ID Externa"|trans }}</th>
                    <th width="15%">{{ "Sigla"|trans }}</th>
                    <th width="15%">{{ "Total de Máquinas"|trans }}</th>
                    <th style="text-align: center">{{ "Ações"|trans }}</th>
                </tr>
              </thead>

              <tbody>

                {% for so in So %}
                    <tr id="item_{{ so.idSo }}" class="{{ cycle(['row0', 'row1'], loop.index) }}">
                        <td id="item_desc_{{ so.idSo }}">{{ so.teDescSo }}</td>
                        <td style="text-align: center">{{ so.inMswindows |traduzFlagSimNao }}</td>
                        <td style="text-align: center">{{ so.teSo  }}</td>
                        <td style="text-align: center">{{ so.idSo }}</td>
                        <td>{{ so.sgSo }}</td>
                        <td></td>
                        <td style="text-align: center" class="td-actions">
                            <a href="{{ path('cacic_sistemaoperacional_editar', {'idSo': so.idSo }) }}" class="btn btn-small" title="{{ "Editar Item"|trans }}">
                                <i class="btn-icon-only icon-edit icon-large"></i>
                            </a>

                            <a href="{{ path('cacic_sistemaoperacional_excluir') }}" class="btn btn-small btn-danger bt-excluir" title="{{ "Excluir Item"|trans }}">
                                <i class="btn-icon-only icon-trash icon-large"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td style="text-align: center;" colspan="7"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
                    </tr>
                {% endfor %}

              </tbody>
           </table>

             {# display navigation #}
             <div class="navigation">
                 {{ knp_pagination_render(So) }}
             </div>

           <div align="right">
                <a class="btn btn-primary bt-adicionar" href="{{ path('cacic_sistemaoperacional_cadastrar') }}">
                    <i class="icon-plus-sign"></i>
                    {{ "Adicionar Sistema Operacional"|trans }}
                </a>
           </div>
         </div> <!-- /block -->
      </div><!-- /box -->

   </div><!-- /span -->
</div><!-- /row -->
{% endblock %}