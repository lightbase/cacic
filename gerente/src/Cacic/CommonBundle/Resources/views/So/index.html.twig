{% extends '::base.html.twig' %}

{% block body %}

<div class="span12">
    <div class="widget">
        <div class="widget-header">
            <i class="icon-globe"></i>
            <h3>Sistemas Operacionais</h3>
        </div> <!-- /widget-header -->

        <div class="widget-content">

            <h3>Sistemas Operacionais</h3>
            <p>Lista de SO cadastrados</p>
            <br />

            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th width="15%">Descrição</th>
                    <th width="15%">MS-Windows?</th>
                    <th width="10%">ID Interna</th>
                    <th width="15%" style="text-align: center">ID Externa</th>
                    <th width="15%">Sigla</th>
                    <th width="15%">Total de Máquinas</th>
                    <th style="text-align: center">Ações</th>
                </tr>
                </thead>

                <tbody>

                {% for so in So %}
                    <tr id="item_{{ so['idSo'] }}" class="{{ cycle(['row0', 'row1'], loop.index) }}">
                        <td id="item_desc_{{ so['idSo'] }}">{{ so['teDescSo'] }}</td>
                        <td style="text-align: center">{{ so['inMswindows'] }}</td>
                        <td style="text-align: center">{{ so['teSo'] }}</td>
                        <td style="text-align: center">{{ so['idSo'] }}</td>
                        <td style="text-align: left">{{ so['sgSo'] }}</td>
                        <td style="text-align: center"></td>
                        <td style="text-align: center" class="td-actions">
                            <a href="{{ path('cacic_sistemaoperacional_editar', {'idSo': so['idSo']}) }}" class="btn btn-small" title="Editar Item">
                                <i class="btn-icon-only icon-edit"></i>
                            </a>

                            <a href="{{ path('cacic_sistemaoperacional_excluir') }}" class="btn btn-small btn-danger bt-excluir" title="Excluir Item">
                                <i class="btn-icon-only icon-remove"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td style="text-align: center;" colspan="6"><b>NENHUM REGISTRO ENCONTRADO!</b></td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
            <div align="right">
                <a class="btn btn-primary bt-adicionar" href="{{ path('cacic_sistemaoperacional_cadastrar') }}">
                    <i class="icon-plus-sign"></i>
                    Adicionar Sistema Operacional
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}