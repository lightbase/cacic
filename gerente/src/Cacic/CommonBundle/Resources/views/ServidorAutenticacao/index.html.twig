{% extends '::base.html.twig' %}

{% block body %}
<div class="span12">

	<div class="widget">

		<div class="widget-header">
			<i class="icon-sitemap"></i>
			<h3>Servidores de Autenticação
		</div> <!-- /widget-header -->

		<div class="widget-content">
		
			<h3>Lista de servidores de autenticação cadastrados</h3>
			<p>Neste módulo deverão ser cadastrados todos os servidores de autenticação para uso nas aberturas de sessões de suporte remoto seguro.</p>
			<br />

	        <table class="table table-striped table-bordered">
				<thead>
					<tr>
		                <th width="15%">Nome</th>
		                <th width="40%">Endereço IP</th>
		                <th width="10%" style="text-align: center">Porta</th>
		                <th width="10%" style="text-align: center">Protocolo<br />Versão</th>
		                <th width="10%" style="text-align: center">Ativo</th>
		                <th style="text-align: center">Ações</th>
            		</tr>
            	</thead>
            	
            	<tbody>
    			{% for ServidorAutenticacao in servidor %}

		        <tr id="item_{{ ServidorAutenticacao['idServidorAutenticacao'] }}">
		            <td id="item_desc_{{ ServidorAutenticacao['idServidorAutenticacao'] }}">{{ ServidorAutenticacao['nmServidorAutenticacao'] }}</td>
		            <td style="text-align: left">{{ ServidorAutenticacao['teIpServidorAutenticacao'] }}</td>
		            <td style="text-align: center">{{ ServidorAutenticacao['nuPortaServidorAutenticacao'] }}</td>
		            <td style="text-align: center">{{ ServidorAutenticacao['idTipoProtocolo'] }}/{{ ServidorAutenticacao['nuVersaoProtocolo'] }}</td>
		            <td style="text-align: center">{{ ServidorAutenticacao ['inAtivo'] }}</td>
		            <td class="td-actions">
						<a href="{{ path('cacic_servidorautenticacao_editar', {'idServidorAutenticacao': ServidorAutenticacao['idServidorAutenticacao']}) }}" class="btn btn-small" title="Editar Item">
							<i class="btn-icon-only icon-edit"></i>
						</a>
						
						<a href="{{ path('cacic_servidorautenticacao_excluir') }}" class="btn btn-small btn-danger bt-excluir" title="Excluir Item">
							<i class="btn-icon-only icon-remove"></i>										
						</a>
					</td>
		        </tr>
		        
			    {% else %}
			        <tr>
			            <td align="center" colspan="6"><b>NENHUM REGISTRO ENCONTRADO!</b></td>
			        </tr>
			    {% endfor %}
            	</tbody>
			</table>
        
	        <div align="right">
			    <a class="btn btn-primary bt-adicionar" href="{{ path('cacic_servidorautenticacao_cadastrar') }}">
			    	<i class="icon-plus-sign"></i>
			    	 Adicionar Servidor 
			    </a>
			</div>

    	</div><!-- /widget-content -->
	</div><!-- /widget -->
</div><!-- /span12 -->

{% endblock %}