{% extends '::base.html.twig' %}

{% block breadcrumb %}
   <li class="active">{{ "Servidores de Autenticação"|trans }}</li>
{% endblock %}

{% block body %}

<div class="row-fluid">
   <div class="span12">
      <div class="box grad_colour_black">

         <h2 class="box_head round_top"><i class="icon-desktop"></i> {{ "Servidores de Autenticação"|trans }}</h2>

        <div class="block box_content round_bottom padding_10">

            <h3>{{ "Lista de servidores de autenticação cadastrados"|trans }}</h3>
            <p>{{ "Neste módulo deverão ser cadastrados todos os servidores de autenticação para uso nas aberturas de sessões de suporte remoto seguro."|trans }}</p>
            <br />
	        <table class="table table-striped table-bordered">
				<thead>
					<tr>
		                <th width="15%">{{ "Nome"|trans }}</th>
		                <th width="40%">{{ "Endereço IP"|trans }}</th>
		                <th width="10%" style="text-align: center">{{ "Porta"|trans }}</th>
		                <th width="10%" style="text-align: center">{{ "Protocolo"|trans }}<br />{{ "Versão"|trans }}</th>
		                <th width="10%" style="text-align: center">{{ "Ativo"|trans }}</th>
		                <th style="text-align: center">{{ "Ações"|trans }}</th>
            		</tr>
            	</thead>
            	
            	<tbody>
    			{% for ServidorAutenticacao in servidor %}

		        <tr id="item_{{ ServidorAutenticacao.idServidorAutenticacao }}">
		            <td id="item_desc_{{ ServidorAutenticacao.idServidorAutenticacao }}">{{ ServidorAutenticacao.nmServidorAutenticacao }}</td>
		            <td style="text-align: left">{{ ServidorAutenticacao.teIpServidorAutenticacao }}</td>
		            <td style="text-align: center">{{ ServidorAutenticacao.nuPortaServidorAutenticacao }}</td>
		            <td style="text-align: center">{{ ServidorAutenticacao.idTipoProtocolo }}/{{ ServidorAutenticacao.nuVersaoProtocolo }}</td>
		            <td style="text-align: center">{{ ServidorAutenticacao.inAtivo }}</td>
		            <td class="td-actions">
						<a href="{{ path('cacic_servidorautenticacao_editar', {'idServidorAutenticacao': ServidorAutenticacao.idServidorAutenticacao }) }}" class="btn btn-small" title="{{ "Editar Item"|trans }}">
							<i class="btn-icon-only icon-edit icon-large"></i>
						</a>
						
						<a href="{{ path('cacic_servidorautenticacao_excluir') }}" class="btn btn-small btn-danger bt-excluir" title="{{ "Excluir Item"|trans }}">
							<i class="btn-icon-only icon-trash icon-large"></i>										
						</a>
					</td>
		        </tr>
		        
			    {% else %}
			        <tr>
			            <td style="text-align: center" colspan="6"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
			        </tr>
			    {% endfor %}
            	</tbody>
			</table>


            {# display navigation #}
            <div class="navigation">
                {{ knp_pagination_render(servidor) }}
            </div>
        
	        <div align="right">
			    <a class="btn btn-primary bt-adicionar" href="{{ path('cacic_servidorautenticacao_cadastrar') }}">
			    	<i class="icon-plus-sign"></i>
			    	  {{ "Adicionar Servidor"|trans }}
			    </a>
			</div>

    	</div>
	</div>
   </div>
</div>

{% endblock %}