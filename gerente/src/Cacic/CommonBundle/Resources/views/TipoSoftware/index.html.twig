{% extends '::base.html.twig' %}

{% block body %}

 <div class="span12">

    <div class="widget">

        <div class="widget-header">
            <i class="icon-globe"></i>
            <h3>Tipos de Softwares</h3>
        </div> <!-- /widget-header -->

        <div class="widget-content">

            <h3>Tipos de Softwares</h3>
            <p>Lista de Tipos de Softwares cadastrados</p>
            <br />

            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th width="90%"style="text-align: center">Descrição do Tipo de Software</th>
                    <th style="text-align: center">Ações</th>
                </tr>
                </thead>

                <tbody>

                {% for tiposoftware in tipoSoftware %}

                    <tr id="item_{{ tiposoftware['idTipoSoftware'] }}" class="{{ cycle(['row0', 'row1'], loop.index) }}">
                        <td style="text-align: center" id="item_desc_{{ tiposoftware['idTipoSoftware'] }}">{{ tiposoftware['teDescricaoTipoSoftware'] }}</td>
                        <td style="text-align: center" class="td-actions">
                            <a href="{{ path('cacic_tiposoftware_editar', {'idTipoSoftware': tiposoftware['idTipoSoftware']}) }}" class="btn btn-small" title="Editar Item">
                                <i class="btn-icon-only icon-edit"></i>
                            </a>

                            <a href="{{ path('cacic_tiposoftware_excluir') }}" class="btn btn-small btn-danger bt-excluir" title="Excluir Item">
                                <i class="btn-icon-only icon-remove"></i>
                            </a>
                        </td>
                    </tr>

                {% else %}
                    <tr>
                        <td align="center" colspan="6"><b>NENHUM REGISTRO ENCONTRADO!</b></td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
            <div align="right">
                <a class="btn btn-primary bt-adicionar" href="{{ path('cacic_tiposoftware_cadastrar') }}">
                    <i class="icon-plus-sign"></i>
                    Adicionar Software
                </a>
            </div>
        </div>
    </div>
 </div>
{% endblock %}