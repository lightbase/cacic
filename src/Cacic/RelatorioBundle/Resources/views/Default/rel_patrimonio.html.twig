{% extends 'CacicRelatorioBundle::base.html.twig' %}

{% block body %}

    <h2 class="">Relatório de Patrimônio</h2>
    <h5>Relatório gerado em {{ "now"|date("d/m/Y H\\hi") }}</h5>

    <hr />

    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th width="20%">{{ "Nome Computador"|trans }}</th>
            <th width="20%">{{ "S.O"|trans }}</th>
            <th width="20%">{{ "I.P"|trans }}</th>
            <th width="20%">{{ "Local"|trans }}</th>
            <th width="20%">{{ "Software"|trans }}</th>
        </tr>
        </thead>

        <tbody>

        {% for reg in dados %}

            <tr>
                <td>{{ reg['nmComputador'] }}</td>
                <td>{{ reg['teSo'] }}</td>
                <td>{{ reg["teIpRede"] }}</td>
                <td>{{ reg['nmLocal'] }}</td>
                <td>{{ reg['nmSoftware'] }}</td>
            </tr>

        {% else %}
            <tr>
                <td style="text-align: center" colspan="4"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}