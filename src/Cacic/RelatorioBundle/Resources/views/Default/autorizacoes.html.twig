{% extends '::base.html.twig' %}

{% block breadcrumb %}
   <li class="active">{{ "Relatório de Autorizações Cadastradas"|trans }}</li>
{% endblock %}

{% block body %}

<div class="row-fluid">
    <div class="span12">
        <div class="box grad_colour_black">
            <h2 class="box_head round_top"><i class="icon-list"></i> {{'Relatório de Autorizações Cadastradas' |trans }}</h2>
            <div class="block box_content round_bottom padding_10">

                <small>{{ 'Gerado em'|trans }} <b>{{ "now"|date('d/m/Y') }} às {{ "now"|date('H:i:s') }}</b>.</small>
                <br /><br />
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th width="10%" style="text-align: center"></th>
                        <th width="30%" style="text-align: center">{{ "Patrimônio"|trans }}</th>
                        <th width="30%" style="text-align: center">{{ "Nome da Rede"|trans }}</th>
                        <th width="30%" style="text-align: center">{{ "Observação"|trans }}</th>
                    </tr>
                    </thead>
                
                    <tbody>
                    
                    {% for reg in registros %}
                
                        <tr>
                            <td style="text-align: center">{{ loop.index }}</td>
                            <td style="text-align: center">{{ reg['nrPatrimonio'] }}</td>
                            <td style="text-align: center">{{ reg['nmComputador'] }}</td>
                            <td style="text-align: center">{{ reg['teObservacao'] }}</td>
                        </tr>
                
                    {% else %}
                        <tr>
                            <td style="text-align: center;" colspan="4"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
                        </tr>
                    {% endfor %}
                
                    </tbody>
                </table>
                
            </div> <!-- /block -->
        </div> <!-- /box -->
    </div> <!-- /span -->
</div> <!-- /row -->

{% endblock %}