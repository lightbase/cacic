{% extends 'CacicRelatorioBundle::base.html.twig' %}

{% block body %}

<h2>{{ 'Relatório de Configurações de Hardware'|trans }}</h2>
<h5>{{ 'Relatório gerado em'|trans }} {{ "now"|date("m/d/Y H\\hi") }}</h5>

<hr />

<table class="table table-striped table-bordered">
	<thead>
	    <tr>
	    	<th width="15%">{{ "Computador"|trans }}</th>
	    	<th width="10%">{{ "Sistema Operacional"|trans }}</th>
	    	<th width="10%">{{ "Local"|trans }}</th>
	        <th>{{ "Hardware"|trans }}</th>
	    </tr>
	</thead>
	
	<tbody>
	    {% for reg in dados %}
        <tr>
            <td>
            	<b>{{ reg.nmComputador }}</b>
            	{% if reg.nmComputador %}<br />{{ reg.teNodeAddress }}{% endif %}
            	{% if reg.teIpComputador %}<br />{{ reg.teIpComputador }}{% endif %}
            </td>
            <td><span class="{% if reg.idSo.inMswindows == 'S' %}red{% else %}blue{% endif %}">{{ reg.idSo.sgSo}}</span></td>
            <td>{%if reg.idRede is not null and reg.idRede.idLocal is not null %}{{ reg.idRede.idLocal.nmLocal }}{% endif %}</td>
            <td>{{ reg.hardwares|length }}</td>
        </tr>
    	{% else %}
        <tr>
            <td style="text-align: center" colspan="5"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
        </tr>
		{% endfor %}
   </tbody>
</table>

{% endblock %}