{% extends 'CacicRelatorioBundle::base.html.twig' %}

{% block body %}

<h2 class="">{{ 'Relatório de Softwares por Tipo'|trans }}</h2>
<h5>{{ 'Relatório gerado em'|trans }}{% if idioma == 'pt_BR' %}{{ "now"|date("d/m/Y H\\hi") }}{% else %}{{ "now"|date("m/d/Y H\\hi") }}{% endif %}</h5>

<hr />

<table class="table table-bordered">
	<thead>
	    <tr>
            <th width="20%" style="text-align: center">{{ 'Tipo'|trans }}</th>
	    	<th width="60%">{{ "Software"|trans }}</th>
	    	<th style="text-align: center">{{ "Máquinas"|trans }}</th>
	    </tr>
	</thead>
	
	<tbody>
	    {% for reg in dados %}
        <tr>
            <td style="text-align: center"><span class="red">{{ reg.teDescricaoTipoSoftware }}</span></td>
            <td><span class="blue">{{ reg.nmSoftware }}</span></td>
            <td style="text-align: center">{{ reg.numComp }}</td>
        </tr>
    	{% else %}
        <tr>
            <td style="text-align: center" colspan="3"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
        </tr>
		{% endfor %}
   </tbody>
</table>

{% endblock %}