{% extends 'CacicRelatorioBundle::base.html.twig' %}

{% block body %}

<h2>{{ 'Relatório de Softwares Não Vinculados'|trans }}</h2>
<h5>{{ 'Relatório gerado em'|trans }} {% if idioma == 'pt_BR' %}{{ "now"|date("d/m/Y H\\hi") }}{% else %}{{ "now"|date("m/d/Y H\\hi") }}{% endif %}</h5>

<hr />

<table class="table table-striped table-bordered">
	<thead>
	    <tr>
	    	<th width="20%">{{ "Software"|trans }}</th>
	    	<th width="20%">{{ "Tipo"|trans }}</th>
	    	<th width="20%">{{ "Descrição"|trans }}</th>
	    	<th width="20%" style="text-align: center">{{ "Licenças"|trans }}</th>
	    	<th width="20%">{{ "Observação"|trans }}</th>
	    </tr>
	</thead>
	
	<tbody>
	
	    {% for reg in dados %}
	
        <tr>
            <td>{{ reg.nmSoftware }}</td>
            <td>{% if reg.idTipoSoftware is not null %}{{ reg.idTipoSoftware }}{% else %}<span class="red"><b>Não classificado</b></span>{% endif %}</td>
            <td>{{ reg.teDescricaoSoftware }}</td>
            <td style="text-align: center">{{ reg.qtLicenca }}</td>
            <td>{{ reg.teObs }}</td>
        </tr>

    	{% else %}
        <tr>
            <td style="text-align: center" colspan="5"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
        </tr>
		{% endfor %}

   </tbody>
</table>

{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(dados) }}
</div>

{% endblock %}