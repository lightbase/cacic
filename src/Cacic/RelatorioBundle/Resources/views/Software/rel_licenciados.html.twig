{% extends 'CacicRelatorioBundle::base.html.twig' %}

{% block body %}

<h2 class="">{{ 'Relatório de Softwares Licenciados'|trans }}</h2>
<h5>{{ 'Relatório gerado em'|trans }} {% if idioma == 'pt_BR' %}{{ "now"|date("d/m/Y H\\hi") }}{% else %}{{ "now"|date("m/d/Y H\\hi") }}{% endif %}</h5>

<hr />

<table class="table table-striped table-bordered">
	<thead>
	    <tr>
	    	<th width="30%">{{ "Software"|trans }}</th>
	    	<th width="20%">{{ "Processo"|trans }}</th>
	    	<th width="20%">{{ "Tipo de licença"|trans }}</th>
	    	<th width="20%">{{ "Vencimento"|trans }}</th>
	        <th width="20%" style="text-align: center">{{ "Licenças"|trans }}</th>
	    </tr>
	</thead>
	
	<tbody>
	    {% for reg in dados %}
        <tr>
            <td>{{ reg['nmSoftware'] }}</td>
            <td>{{ reg['nrProcesso'] }}</td>
            <td>{{ reg['teTipoLicenca'] }}</td>
            <td>{{ reg['dtVencimentoLicenca']|date('d/m/Y') }}</td>
            <td style="text-align: center">{{ reg['qtLicenca'] }}</td>
        </tr>
    	{% else %}
        <tr>
            <td style="text-align: center" colspan="5"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
        </tr>
		{% endfor %}
   </tbody>
</table>

{% endblock %}