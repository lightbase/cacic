{% extends 'CacicCommonBundle::base.html.twig' %}

{% block breadcrumb %}
    <li class="active">{{ 'Softwares Não Classificados'|trans }}</li>
{% endblock %}

{% block body %}

<div class="row-fluid">
   <div class="span12">

     <div class="box grad_colour_black">

        <h2 class="box_head round_top"><i class="icon-hdd"></i> {{ 'Softwares Não Classificados'|trans }}</h2>

        <div class="block box_content round_bottom padding_10">

            <h3>{{ 'Lista de Softwares não classificados'|trans }}</h3>
            <p>{{ 'Classificação de softwares inventariados conforme tipos possíveis'|trans }}</p>
            <br />
            
            <form id={{ 'formSoftwaresNaoClassificados'|trans }} class="form-horizontal" action="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}" method="post">

	          <table class="table table-striped table-bordered">
	             <thead>
	                <tr>
	                    <th>{{ 'Software'|trans }}</th>
	                    {% for tipo in tipos  %}
	                    <th width="10%" style="text-align: center">{{ tipo }}</th>
	                    {% endfor %}
	                </tr>
	             </thead>
	
	             <tbody>
	                {% for software in softwares %}
	                    <tr id="item_{{ software['idSoftware'] }}">
	                        <td id="item_desc_{{ software['idSoftware'] }}">{{ software['nmSoftware'] }}</td>
	                        {% for tipo in tipos %}
	                        <td style="text-align: center; vertical-align: middle;">
	                            <input type="radio" name="software[{{ software['idSoftware'] }}]" value="{{ tipo.idTipoSoftware }}" style="float: none" />
	                        </td>
	                        {% endfor %}
	                    </tr>
	                {% else %}
	                    <tr>
	                        <td style="text-align: center" colspan="{{ (tipos|length) + 1 }}"><b>{{ 'NENHUM REGISTRO ENCONTRADO!'|trans }}</b></td>
	                    </tr>
	                {% endfor %}

	             </tbody>
	          </table>
				{# display navigation #}
				<div class="navigation">
					{{ knp_pagination_render(softwares) }}
				</div>
	          <div class="control-group">
	              <div class="controls"  align="right">
	                  <button type="reset" class="btn">
	                      <i class="icon-refresh"></i>
	                      {{ "Resetar Valores"|trans }}
	                  </button>
	                  <button type="submit" formnovalidate class="btn btn-primary">
	                      <i class="icon-ok-sign"></i>
	                      {{ "Salvar Dados"|trans }}
	                  </button>
	              </div>
	          </div>
          
            </form>
          
        </div> <!-- /block -->
     </div><!-- /box -->

   </div><!-- /span -->
</div><!-- /row -->
{% endblock %}