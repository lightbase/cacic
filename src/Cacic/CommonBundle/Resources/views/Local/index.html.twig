{% extends 'CacicCommonBundle::base.html.twig' %}

{% block breadcrumb %}     
	<li class="active">{{ "Locais"|trans }}</li>
{% endblock %}

{% block body %}

<div class="row-fluid">

<div class="span12">
	<div class="box grad_colour_black">
		<h2 class="box_head round_top"><i class="icon-globe"></i> {{ "Locais"|trans }}</h2>
	
		<div class="block box_content round_bottom padding_10">

			<h3>{{ "Lista de locais cadastrados"|trans }}</h3>
			<p>{{ "Neste módulo deverão ser registrados todos os locais originais do sistema, para que seja possível o controle centralizado"|trans }}</p>
			<br />

	        <table class="table table-striped table-bordered">
				<thead>
				<tr>
				    <th width="15%">{{ "Sigla"|trans }}</th>
				    <th width="40%">{{ "Descrição"|trans }}</th>
				    <th width="10%" style="text-align: center">{{ "Redes"|trans }}</th>
				    <th width="10%" style="text-align: center">{{ "Usuários"|trans }}<br />{{ "Primários"|trans }}</th>
				    <th width="10%" style="text-align: center">{{ "Usuários"|trans }}<br />{{ "Secundários"|trans }}</th>
					<th style="text-align: center">{{ "Ações"|trans }}</th>
			    </tr>
				</thead>
		
			  	<tbody>
			    {% for local in locais %}
			    
			    <tr id="item_{{ local[0].idLocal }}">
				    <td>{{ local[0].sgLocal }}</td>
				    <td id="item_desc_{{ local[0].idLocal }}">{{ local[0].nmLocal }}</td>
				    <td style="text-align: center">{{ local.numRedes}}</td>
				    <td style="text-align: center">{{ local.numUsuariosPrimarios }}</td>
				    <td style="text-align: center"></td>
					<td style="text-align: center" class="td-actions">
						<a href="{{ path('cacic_local_editar', {'idLocal': local[0].idLocal}) }}" class="btn btn-small" title="{{ "Editar Item"|trans }}">
							<i class="btn-icon-only icon-edit icon-large"></i>
						</a>
						
						<a href="{{ path('cacic_local_excluir') }}" class="btn btn-small btn-danger bt-excluir" title="{{ "Excluir Item"|trans }}">
							<i class="btn-icon-only icon-trash icon-large"></i>										
						</a>
					</td>
			    </tr>
			    
			    {% else %}
                    <tr>
                        <td style="text-align: center;" colspan="6"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
                    </tr>
				{% endfor %}
			    
			  </tbody>
			</table>
			
			{# display navigation #}
			<div class="navigation">
			    {{ knp_pagination_render(locais) }}
			</div>
			
			<div align="right">
			    <a class="btn btn-primary bt-adicionar" href="{{ path('cacic_local_cadastrar') }}">
			    	<i class="icon-plus-sign"></i>
			    	 {{ "Adicionar Local"|trans }}
			    </a>
			</div>
		</div> <!-- /block -->
	</div> <!-- /box -->
</div> <!-- /span -->

</div> <!-- /row -->
{% endblock %}