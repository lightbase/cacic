
<table class="table table-striped table-bordered">
	<thead>
		<tr>
		    <th width="5%" style="text-align: center">#</th>
		    <th width="40%">{{ "Configuração"|trans }}</th>
		    <th width="55%">{{ "Valor"|trans }}</th>
		</tr>
	</thead>
	
  	<tbody>
	
    {% for configuracao in configuracoes %}
    
    <tr>
	    <td style="text-align: center">{{ loop.index }}</td>
	    <td>{{ configuracao['nmConfiguracao'] }}</td>
	    <td>{{ configuracao['vlConfiguracao'] }}</td>
    </tr>
    
    {% else %}
    <tr>
		<td colspan="6" style="text-align: center;"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
	</tr>
	{% endfor %}
    
  </tbody>
</table>