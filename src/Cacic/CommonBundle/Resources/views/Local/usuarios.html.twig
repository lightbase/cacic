<h5>{{ "Usuários Associados"|trans }}</h5>
	
<table class="table table-striped table-bordered">
	<thead>
		<tr>
		    <th width="5%" style="text-align: center"></th>
		    <th width="20%">{{ "Login"|trans }}</th>
		    <th width="25%">{{ "Nome Completo"|trans }}</th>
		    <th width="20%">{{ "Nível de acesso"|trans }}</th>
		    <th width="15%">{{ "Tipo de acesso"|trans }}</th>
		    <th>{{ "E-mail"|trans }}</th>
		</tr>
	</thead>
	
  	<tbody>
	
    {% for usuario in usuarios %}
    
    <tr id="item_{{ usuario[0]['idUsuario'] }}">
	    <td style="text-align: center">{{ loop.index }}</td>
	    <td id="item_desc_{{ usuario[0]['idUsuario'] }}">{{ usuario[0]['nmUsuarioAcesso'] }}</td>
	    <td>{{ usuario[0]['nmUsuarioCompleto'] }}</td>
	    <td>{{ usuario['teGrupoUsuarios'] }}</td>
	    <td>{% if idLocal == usuario['idLocal'] %} Primário {%else%} Secundário {% endif %}  </td>
	    <td>{{ usuario[0]['teEmailsContato'] }}</td>
    </tr>
    
    {% else %}
    <tr>
		<td colspan="6" style="text-align: center;"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
	</tr>
	{% endfor %}
    
  </tbody>
</table>