            </td>
        </tr>
        <!-- <tr>
         <td>{{ 'Logotipo upload'|trans }}</td>
         <td>
               <Input type = "text"  name = "id_default_body_bgcolor" id = "id_default_body_bgcolor" />

        </td>
    </tr> !-->

        <tr>
            <td>{{ 'Gráficos a serem exibidos'|trans }}</td>
            <td>
