            </td>
        </tr>

        <tr>
            <td>{{ 'Exibe janela de patrimônio'|trans }}</td>
            <td>
                <input id="cs_abre_janela_patr_s" type="radio" name="cs_abre_janela_patr" value="S"
                       {% if ( configuracoes['cs_abre_janela_patr'] == 'S' ) %}checked="checked"{% endif %}
