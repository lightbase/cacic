{% extends 'CacicCommonBundle::base.html.twig' %}

{% block breadcrumb %}
   <li class="active">{{ "Tipos de Softwares"|trans }}</li>
{% endblock %}

{% block body %}

<div class="row-fluid">
  <div class="span12">
     <div class="box grad_colour_black">

         <h2 class="box_head round_top"><i class="icon-laptop"></i> {{ "Tipos de Softwares"|trans }}</h2>

       <div class="block box_content round_bottom padding_10">

                <h3>{{ "Lista de Tipos de Softwares cadastrados"|trans }}</h3>
                <p>{{ "Neste módulo deverão ser cadastrados os Tipos de software do sistema"|trans }}</p>
                <br />

         <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th style="text-align: center" width="10%">#ID</th>
                    <th width="80%">{{ "Descrição do Tipo de Software"|trans }}</th>
                    <th style="text-align: center">{{ "Ações"|trans }}</th>
                </tr>
            </thead>

            <tbody>

                {% for tiposoftware in tipoSoftware %}

                    <tr id="item_{{ tiposoftware.idTipoSoftware }}" class="{{ cycle(['row0', 'row1'], loop.index) }}">
                        <td style="text-align: center">{{ tiposoftware.idTipoSoftware }}</td>
                        <td id="item_desc_{{ tiposoftware.idTipoSoftware }}">{{ tiposoftware.teDescricaoTipoSoftware }}</td>
                        <td style="text-align: center" class="td-actions">
                            <a href="{{ path('cacic_tiposoftware_editar', {'idTipoSoftware': tiposoftware.idTipoSoftware }) }}" class="btn btn-small" title="{{ "Editar Item"|trans }}">
                                <i class="btn-icon-only icon-edit icon-large"></i>
                            </a>

                            <a href="{{ path('cacic_tiposoftware_excluir') }}" class="btn btn-small btn-danger bt-excluir" title="{{ "Excluir Item"|trans }}">
                                <i class="btn-icon-only icon-trash icon-large"></i>
                            </a>
                        </td>
                    </tr>

                {% else %}
                    <tr>
                        <td style="text-align: center" colspan="3"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
                    </tr>
                {% endfor %}

            </tbody>
         </table>

           {# display navigation #}
           <div class="navigation">
               {{ knp_pagination_render(tipoSoftware) }}
           </div>

         <div align="right">
                <a class="btn btn-primary bt-adicionar" href="{{ path('cacic_tiposoftware_cadastrar') }}">
                    <i class="icon-plus-sign"></i>
                    {{ "Adicionar Software"|trans }}
                </a>
         </div>
       </div> <!-- /block -->
     </div><!-- /box -->

  </div><!-- /span -->
</div><!-- /row -->
{% endblock %}