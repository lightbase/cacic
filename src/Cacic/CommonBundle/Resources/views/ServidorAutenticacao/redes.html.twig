<h5>Redes Associadas</h5>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
	        <th width="5%" style="text-align: center"></th>
	        <th width="20%">Endere√ßo IP</th>
	        <th>Nome da Rede</th>
    	</tr>
    </thead>

    <tbody>

    {% for rede in redes %}

        <tr id="item_{{ rede['idRede'] }}">
            <td style="text-align: center">{{ loop.index }}</td>
