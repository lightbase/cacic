{% extends '::base.html.twig' %}

{% block body %}

<div class="span12">
    <div class="widget">
        <div class="widget-header">
            <i class="icon-globe"></i>
            <h3>Usb Device</h3>
        </div> <!-- /widget-header -->

        <div class="widget-content">

            <h3>Usb Device</h3>
            <p>Lista de Usb Device cadastrados</p>
            <br />

            <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th width="40%"style="text-align: center">Fabricante</th>
                <th width="45%"style="text-align: center">Dispositivo</th>
                <th style="text-align: center">Ações</th>
            </tr>
            </thead>

            <tbody>

            {% for UsbDevice in UsbDevice %}

                <tr id="item_{{ UsbDevice['idUsbDevice'] }}" class="{{ cycle(['row0', 'row1'], loop.index) }}">
                    <td style="text-align: center" id="item_desc_{{ UsbDevice['idUsbDevice'] }}">{{ UsbDevice['idUsbDevice'] }}-{{ UsbDevice['nmUsbDevice'] }}</td>
                    <td style="text-align: center" ">{{ UsbDevice['idUsbVendor'] }}-{{ UsbDevice['nmUsbVendor'] }}</td>
                    <td style="text-align: center" class="td-actions">
                        <a href="{{ path('cacic_usbdevice_editar', {'idUsbDevice': UsbDevice['idUsbDevice']}) }}" class="btn btn-small" title="Editar Item">
                            <i class="btn-icon-only icon-edit"></i>
                        </a>

                        <a href="{{ path('cacic_usbdevice_excluir') }}" class="btn btn-small btn-danger bt-excluir" title="Excluir Item">
                            <i class="btn-icon-only icon-remove"></i>
                        </a>
                    </td>
                </tr>

            {% else %}
                <tr>
                    <td align="center" colspan="6"><b>NENHUM REGISTRO ENCONTRADO!</b></td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
            <div align="right">
                <a class="btn btn-primary bt-adicionar" href="{{ path('cacic_usbdevice_cadastrar') }}">
                    <i class="icon-plus-sign"></i>
                    Adicionar Aplicativo
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}