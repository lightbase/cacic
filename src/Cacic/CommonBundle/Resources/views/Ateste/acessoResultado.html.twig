<div class="row-fluid">
    <div class="span12">
        <div class="box grad_colour_black">
            <h2 class="box_head round_top"><i class="icon-list"></i> {{'Resultado da pesquisa' |trans }}</h2>
            <div class="block box_content round_bottom padding_10">

              <form id="ateste" class="form-horizontal" action="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}" method="post" >

				<table class="table table-striped table-bordered">
				    <thead>
				    <tr>
                        <th width="10%" style="text-align: center"></th>
				        <th width="20%">{{ "Local"|trans }}</th>
				        <th width="30%" style="text-align: center">{{ "Rede"|trans }}</th>
				        <th width="20%" style="text-align: center">{{ "Endereço IP"|trans }}</th>
                        <th width="20%" style="text-align: center">{{ "Estações"|trans }}</th>
                        <th style="text-align: center">
                            <label style="margin: auto; width:12px; height:10px;">
                                <input type="checkbox" class="toggleCheck" name="toggleCheck[]" value="redes" checked>
                            </label>
                        </th>
				    </tr>
				    </thead>

				    <tbody>

				    {% for log in logs %}

				        <tr>
				            <td style="text-align: center">{{ loop.index }}</td>
				            <td>{{ log['nmLocal'] }}</td>
                            <td>{{ log['nmRede'] }}</td>
                            <td>{{ log['teIpRede'] }}</td>
                            <td>{{ log['numComp'] }}</td>
                            <td>
                                <label style="margin: auto; width:12px; height:10px;">
                                    <input type="checkbox" id="item_id_{{ log['idRede'] }}" name="redes[]" value="{{ log['idRede'] }}" checked>
                                    <input type="hidden" name="rede_{{ log['idRede'] }}" value="{{ log['numComp'] }}">
                                </label>
                            </td>
				        </tr>
				
				    {% else %}
				        <tr>
				            <td style="text-align: center;" colspan="4"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
				        </tr>
				    {% endfor %}

				    </tbody>
				</table>

                  <div class="control-group">
                      <label for="descricao" class="control-label">{{ 'Descrição'|trans }}</label>
                      <div class="controls">
                          {{ form_widget(ateste.descricao) }}
                          <p class="help-block">{{ "Descrição da ação do Ateste."|trans }}</p>
                      </div>
                  </div>

                  <div class="control-group">
                      <label for="atestado" class="control-label">{{ 'Ateste'|trans }}</label>
                      <div class="controls">
                          {{ form_widget(ateste.atestado, { 'attr': {'onclick': 'javascript:mostraDetalhes(this)'} }) }}
                          <p class="help-block">{{ "Atesto que as informações fornecidas são verídicas."|trans }}</p>
                      </div>
                  </div>

                  <div class="control-group" id="_detalhes">
                      <label for="detalhes" class="control-label">{{ 'Detalhes'|trans }}</label>
                      <div class="controls">
                          {{ form_widget(ateste.detalhes) }}
                          <p class="help-block">{{ "Descreva os motivos para sua discordância."|trans }}</p>
                      </div>
                  </div>

                  <div class="control-group">
                      <label for="qualidade_servico" class="control-label">{{ 'Qualidade do Serviço'|trans }}</label>
                      <div class="controls">
                          {{ form_widget(ateste.qualidade_servico) }}
                          <p class="help-block">{{ "Coloque aqui seus comentários sobre a qualidade do serviço."|trans }}</p>
                      </div>
                  </div>

                  <div class="control-group">
                      <div class="controls">
                          <button type="reset" class="btn">
                              <i class="icon-refresh"></i>
                              {{ "Resetar Valores"|trans }}
                          </button>
                          <button type="submit" class="btn btn-primary">
                              <i class="icon-ok-sign"></i>
                              {{ 'Atestar'|trans }}
                          </button>
                      </div>
                  </div>

               </form>
				
			</div> <!-- /block -->
        </div> <!-- /box -->
    </div> <!-- /span -->
</div> <!-- /row -->