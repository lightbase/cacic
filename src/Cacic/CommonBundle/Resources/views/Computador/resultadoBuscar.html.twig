<div class="row-fluid">
    <div class="span12">
        <div class="box grad_colour_black">
            <h2 class="box_head round_top"><i class="icon-list"></i> {{'Resultado da pesquisa' |trans }}</h2>
            <div class="block box_content round_bottom padding_10">

                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th  style="text-align: center">{{ "Nome da Máquina"|trans }}</th>
                        <th  style="text-align: center">{{ "Endereço IP"|trans }}</th>
                        <th  style="text-align: center">{{ "Versão Cacic"|trans }}</th>
                        <th  style="text-align: center">{{ "MAC Address"|trans }}</th>
                        <th  style="text-align: center">{{ "Data de Instalação"|trans }}</th>
                        <th  style="text-align: center">{{ "Ultimo acesso"|trans }}</th>
                        <th  style="text-align: center">{{ "Versão do Ger_cols"|trans }}</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for computador in computadores %}
                        <tr>
                            <td>{{ computador['nmComputador'] }}</td>
                            <td style="text-align: center">{{ computador['teIpComputador'] }}</td>
                            <td style="text-align: center">{{'Versão ' |trans }} {{ computador['teVersaoCacic'] }}</td>
                            <td style="text-align: center"> {{ computador['teNodeAddress'] }}</td>
                            <td>{{ computador['dtHrInclusao'] }}</td>
                            <td>{{ computador['dtHrUltAcesso'] }}</td>
                            <td style="text-align: center">{{ computador['teVersaoGercols'] }}</td>
                        </tr>

                    {% else %}
                        <tr>
                            <td style="text-align: center;" colspan="9"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>

            </div> <!-- /block -->
        </div> <!-- /box -->
    </div> <!-- /span -->
</div> <!-- /row -->