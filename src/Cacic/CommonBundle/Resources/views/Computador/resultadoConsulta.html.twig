<div class="row-fluid">
    <div class="span12">
        <div class="box grad_colour_black">
            <h2 class="box_head round_top"><i class="icon-list"></i> {{'Resultado da pesquisa' |trans }}</h2>
            <div class="block box_content round_bottom padding_10">

                <table class="table table-striped table-bordered" id="tableConsultasComputadores">
                    <thead>
                    <tr>
                        {# <th  style="text-align: center">{{ "Número"|trans }}</th>#}
                        <th width="20%" style="text-align: center">{{ "Nome da Máquina"|trans }}</th>
                        <th width="20%" style="text-align: center">{{ "Endereço IP"|trans }}</th>
                        <th width="20%" style="text-align: center">{{ "Endereço MAC"|trans }}</th>
                        <th width="20%" style="text-align: center">{{ "Versão Cacic"|trans }}</th>
                        <th width="5%"></th>


                    </tr>
                    </thead>

                    <tbody>

                    {% for computador in computadores %}

                        <tr>

                            {#<td style="text-align: center">{{ computador['idComputador'] }}</td>#}
                            <td style="text-align: center">{{ computador['nmComputador'] }}</td>
                            <td style="text-align: center">{{ computador['teIpComputador'] }}</td>
                            <td style="text-align: center">{{ computador['teNodeAddress'] }}</td>
                            <td style="text-align: center">{{'Versão ' |trans }} {{ computador['teVersaoCacic'] }}</td>
                            <td>
                                <a class="btn" href="{{ path("cacic_computador_detalhar") }}/{{ computador['idComputador'] }}" target="_blank">
                                    <i class="icon-search"></i>
                                </a>
                            </td>



                        </tr>

                    {% else %}
                        <tr>
                            <td style="text-align: center;" colspan="4"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
                        </tr>
                    {% endfor %}



                    </tbody>

                </table>

            </div> <!-- /block -->
        </div> <!-- /box -->
    </div> <!-- /span -->
</div> <!-- /row -->
{% block javascripts %}

    <!-- javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <!-- jQuery (UI) -->
    <script type="text/javascript" src="{{ asset('bundles/caciccommon/libs/jquery.1.7.1.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/caciccommon/libs/jquery-ui-1.8.17.min.js') }}"></script>



    <script type="text/javascript">
        /**
         * Mensagens do sistema
         */
        $$(document).ready(function() {
            $('#tableConsultasComputadores').dataTable( {
                "sPaginationType": "full_numbers"
            } );
        } );
    </script>

{% endblock %}